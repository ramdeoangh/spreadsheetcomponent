# Render Backend Environment Variables
# Set these in Render dashboard under Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# CORS Configuration
# Update this with your frontend domain after deployment
CORS_ORIGIN=https://spreadsheet1-three.vercel.app

# Logging Configuration
LOG_LEVEL=info
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=false

# Database Configuration (for future use)
DATABASE_URL=mongodb://localhost:27017/spreadsheet-app

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=100

# Render Specific
# These are automatically set by Render
# RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
# RENDER_INSTANCE_ID=your-instance-id 